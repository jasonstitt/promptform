{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "module": "esnext",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "target": "es2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  }
}
